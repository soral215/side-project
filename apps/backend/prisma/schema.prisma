generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  model3DJobs Model3DJob[]

  @@map("users")
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments  Comment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comments")
}

model ActivityLog {
  id        String   @id @default(uuid())
  userId    String?  // 활동한 사용자 (로그인 전에는 null)
  action    String   // 활동 타입 (예: "user_login", "user_update", "user_delete")
  entity    String?  // 대상 엔티티 (예: "user", "post")
  entityId  String?  // 대상 엔티티 ID
  details   String?  // 추가 정보 (JSON 문자열)
  ipAddress String?  // IP 주소
  userAgent String?  // User Agent
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("activity_logs")
}

model Model3DJob {
  id             String           @id @default(uuid())
  userId         String
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  // SQLite 커넥터 제약(이 프로젝트 설정)으로 enum/Json을 쓰지 않고 문자열(JSON 문자열)로 저장합니다.
  // status 값은 "PENDING" | "PROCESSING" | "SUCCEEDED" | "FAILED" 중 하나로 사용합니다.
  status         String           @default("PENDING")
  provider       String           @default("mock")
  providerJobId  String?

  // JSON 문자열(예: ["https://...","https://..."])
  inputImageUrls String
  outputModelUrl String?
  errorMessage   String?

  // Meshy 텍스처 가이드(작업별)
  texturePrompt  String?
  textureImageUrl String?
  enablePbr      Boolean          @default(false)
  shouldRemesh   Boolean          @default(true)
  targetPolycount Int?            // 선택: 폴리곤 목표(티어 범위는 Meshy 제한)
  symmetryMode   String?          // off|auto|on

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("model_3d_jobs")
}
